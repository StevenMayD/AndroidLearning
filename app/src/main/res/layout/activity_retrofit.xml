<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.RetrofitActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retrofit的post常规请求(编码方式：键值对)"
        android:onClick="postAsync_form_urlencoded"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retrofit的post @body注解请求(编码方式：form-body)"
        android:onClick="postAsync_form_body"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retrofit的post @Path注解请求"
        android:onClick="postAsync_Path"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retrofit的post @Headers注解请求"
        android:onClick="postAsync_Headers"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retrofit的post @Url注解请求"
        android:onClick="postAsync_Url"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retrofit的使用手动转换器Gson"
        android:onClick="retrofit_converter"
        android:layout_marginTop="30dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retrofit的使用自动转换器converter-gson:"
        android:onClick="retrofit_converter_gson"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retrofit适配器的使用"
        android:onClick="retrofit_adapter"
        android:layout_marginTop="30dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retrofit文件上传"
        android:onClick="retrofit_upload"
        android:layout_marginTop="30dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retrofit文件下载（返回Call类型）"
        android:onClick="retrofit_download_call"
        android:layout_marginTop="30dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retrofit文件下载（返回Flowable类型）"
        android:onClick="retrofit_download_flowable"
        />
</LinearLayout>